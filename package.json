{
  "name": "kong-cypress-tests",
  "version": "1.0.0",
  "description": "Cypress automation tests for Kong Gateway UI and proxy",
  "main": "index.js",
  "scripts": {
    "test": "cross-env CYPRESS_CACHE_FOLDER=$HOME/.cache/Cypress cypress run",
    "cypress:open": "cross-env CYPRESS_CACHE_FOLDER=$HOME/.cache/Cypress cypress open",
    "cypress:run:headed": "cross-env CYPRESS_CACHE_FOLDER=$HOME/.cache/Cypress cypress run --headed --browser chrome",
    "generate-report": "node generate-report.js"
  },
  "keywords": [
    "cypress",
    "kong",
    "automation",
    "tests"
  ],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^15.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "glob": "^11.0.3"
  }
}
